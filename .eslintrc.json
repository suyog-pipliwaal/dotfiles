{
    "env": {
        "browser" : true,
        "node"    : true,
        "commonjs": true,
        "es6"     : true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "indent": [
            "warn",
            "tab",
            {"SwitchCase" : 1}
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "off",
            "single"
        ],
        "semi": [
            "warn",
            "always"
        ],
        "eqeqeq"                  : ["warn", "always"],
        "no-extra-semi"           : "warn",
        "no-empty"                : "warn",
        "no-unused-vars"          : "warn",
        "react/jsx-uses-vars"     : "warn",
        "react/jsx-uses-react"    : "warn"
    }
}
